<Window x:Class="WpfApp8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp8"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        
        <StackPanel DockPanel.Dock="Right">
        <Button Content="Dodaj" FontSize="32" Height="50" Width="300" Margin="0,50,40,0" HorizontalAlignment="Right" Click="Button_Dodaj"/>
        <Button Content="Izmeni" FontSize="32" Height="50" Width="300" Margin="0,50,40,0" HorizontalAlignment="Right" Click="Button_Izmeni"/>
        <Button Content="Izbrisi" FontSize="32" Height="50" Width="300" Margin="0,50,40,0" HorizontalAlignment="Right" Click="Button_Izbrisi"/>
        </StackPanel>
        <ScrollViewer >
        <DataGrid   Name="dg" IsReadOnly="True" SelectionMode="Single"  ColumnWidth="*"/>
        </ScrollViewer>

    </DockPanel>
</Window>
